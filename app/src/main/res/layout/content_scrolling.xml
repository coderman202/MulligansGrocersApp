<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.android.reggie.projectapp1.ScrollingActivity"
    tools:showIn="@layout/activity_scrolling">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView style="@style/TextIntro"
            android:id="@+id/intro"
            android:text="@string/intro" />

        <!--The following few linear layouts just with contact info, opening hours about the grocers-->
        <LinearLayout style="@style/LayoutHorizontal"
            android:id="@+id/hours"
            android:layout_below="@id/intro">

            <ImageView style="@style/Icon"
                android:src="@drawable/calendar" />

            <TextView style="@style/TextStandard"
                android:text="@string/opening_hours_mon_sat" />

            <TextView style="@style/TextStandard"
                android:text="@string/opening_hours_sun" />
        </LinearLayout>

        <LinearLayout style="@style/LayoutHorizontal"
            android:id="@+id/phone"
            android:layout_below="@id/hours">

            <ImageView style="@style/Icon"
                android:src="@drawable/phone" />

            <TextView style="@style/TextStandard"
                android:text="@string/phone"/>

            <ImageView style="@style/Icon"
                android:src="@drawable/phone" />

            <TextView style="@style/TextStandard"
                android:text="@string/mobile"/>
        </LinearLayout>

        <LinearLayout style="@style/LayoutHorizontal"
            android:id="@+id/email"
            android:layout_below="@id/phone">

            <ImageView style="@style/Icon"
                android:src="@drawable/googlemail" />

            <TextView style="@style/TextStandard"
                android:text="@string/email"/>
        </LinearLayout>


        <LinearLayout style="@style/LayoutHorizontal"
            android:id="@+id/address"
            android:layout_below="@id/email">

            <ImageView style="@style/Icon"
                android:src="@drawable/mappin" />

            <TextView style="@style/TextStandard"
                android:text="@string/address"/>
        </LinearLayout>

        <!--A map image showing the location pinned. Future versions potentially with google maps
        integration-->

        <ImageView
            android:id="@+id/map"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_margin="15dp"
            android:layout_below="@id/address"
            android:src="@drawable/map"/>

        <LinearLayout style="@style/LayoutHorizontal"
            android:layout_below="@id/map">

            <TextView style="@style/TextStandard"
                android:id="@+id/follow"
                android:textStyle="bold"
                android:text="@string/follow"/>


            <ImageView style="@style/Icon"
                android:id="@+id/twit"
                android:src="@drawable/twitterlogo" />

            <ImageView style="@style/Icon"
                android:id="@+id/fb"
                android:src="@drawable/facebooklogo"/>

            <ImageView style="@style/Icon"
                android:src="@drawable/instagramlogo"/>

        </LinearLayout>

        <!--An image scroller to scroll through a selection of fruit and veg images.
        Currently not working.-->
        <!-- <HorizontalScrollView
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_margin="15dp"
            android:layout_below="@id/intro">

            <LinearLayout
                android:id="@+id/imagescroller"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            </LinearLayout>

        </HorizontalScrollView> -->




    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
